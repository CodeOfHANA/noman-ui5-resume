<mvc:View
    controllerName="noman.resume.controller.Education"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    
    <f:DynamicPage id="educationPage" toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Education" level="H2"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        
        <f:content>
            <VBox class="sapUiSmallMargin">
                <List
                    items="{resume>/education}"
                    showSeparators="Inner">
                    <CustomListItem>
                        <HBox alignItems="Start" class="sapUiTinyMarginTop sapUiTinyMarginBottom">
                            <!-- College Logo Image -->
                            <f:Avatar
                                src="Images/{resume>key}.jpg"
                                displayShape="Square"
                                displaySize="L"
                                class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>                
                            <VBox>
                                <!-- Degree as Header -->
                                <Title text="{resume>degree}" level="H3" class="sapUiTinyMarginBottom"/>
                                
                                <!-- Institution and Year as Subheader -->
                                <ObjectStatus
                                    title="{resume>institution}"
                                    text="{resume>year}"
                                    class="sapUiTinyMarginBottom"/>
                                
                                <!-- Location with Icon -->
                                <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                    <core:Icon src="sap-icon://map" class="sapUiTinyMarginEnd"/>
                                    <Text text="{resume>location}"/>
                                </HBox>
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>